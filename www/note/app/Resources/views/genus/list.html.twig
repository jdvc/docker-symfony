{% extends 'base.html.twig' %}

{% block body %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Genus</th>
            <th># of species</th>
            <th>updated</th>
        </tr>
        </thead>
        <tbody>
        {% for genus in genuses %}
            {% if genus.isPublished %}
                <tr>
                    <td>
                        <a href="{{ path('genus_show',{
                            'genusName': genus.name
                        }
                        ) }}">
                            {{ genus.name }}
                        </a>
                    </td>
                    <td>{{ genus.speciesCount }}</td>
                    <td>{{ genus.updatedAt|date('Y-m-d') }}</td>
                </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>
{% endblock %}